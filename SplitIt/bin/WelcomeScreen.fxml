<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<StackPane fx:controller="Main" xmlns:fx="http://javafx.com/fxml" prefHeight="600.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="10">
        <ImageView fitWidth="400" fitHeight="300">
            <image>
                <Image url="SplitItLogo.png" />
            </image>
        </ImageView>
        <Label text="Welcome to Split It" />
        <Label fx:id="companyLabel" />
        <Label text="Log In or Register" />
        <HBox alignment="CENTER" spacing="15">
            <Button text="Log In" onAction="#handleLoginAction" />
            <Button text="Register" onAction="#handleRegisterAction" />
        </HBox>
    </VBox>
</StackPane>
